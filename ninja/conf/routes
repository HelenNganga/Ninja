# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page


GET        /                          controllers.NinjaController.home
GET        /highscore                 controllers.NinjaController.highscore
GET        /game                      controllers.NinjaController.ninja
GET        /about                     controllers.NinjaController.about
GET        /addPlayer1/:player        controllers.NinjaController.player(player: String)
GET        /addPlayer2/:player        controllers.NinjaController.player(player: String)
GET        /setFlag/:row:col          controllers.NinjaController.setFlag(row: Int, col:Int)
GET        /walk/:row:col:d           controllers.NinjaController.walk(row: Int, col:Int, d:String)
GET        /f                         controllers.NinjaController.changeTurn()
GET        /current                   controllers.NinjaController.currentPlayer()

GET        /state                     controllers.NinjaController.state
GET        /json                      controllers.NinjaController.json



# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file              controllers.Assets.versioned(path="/public", file: Asset)
